@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bold text-success">@ViewData["Title"]</h1>
                <p class="lead text-muted">Your privacy is important to us</p>
            </div>

            <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-4">
                    <h5 class="card-title text-success mb-3">Privacy Information</h5>
                    <p class="card-text text-muted">Use this page to detail your site's privacy policy.</p>
                </div>
            </div>
        </div>
    </div>
</div>
