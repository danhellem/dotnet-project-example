@{
    ViewData["Title"] = "Contact Us";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bold text-primary">@ViewData["Title"]</h1>
                <p class="lead text-muted">Get in touch with us</p>
            </div>

            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <img src="~/images/contact-image.svg" alt="Contact Us" class="img-fluid rounded-3 mb-4" style="max-height: 250px; width: 100%; object-fit: cover;" />
                            </div>
                            <h5 class="card-title text-primary mb-3">We'd Love to Hear From You</h5>
                            <p class="card-text text-muted">Feel free to reach out to us using any of the contact methods provided. We're here to help!</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body p-4">
                            <h5 class="card-title text-primary mb-4">Contact Information</h5>
                            
                            <div class="contact-item d-flex align-items-center mb-3 p-3 bg-light rounded-3">
                                <div class="icon-wrapper me-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-geo-alt-fill text-primary" viewBox="0 0 16 16">
                                        <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
                                    </svg>
                                </div>
                                <div>
                                    <strong class="d-block text-dark">Address</strong>
                                    <span class="text-muted">13139 Alyssia Ave</span>
                                </div>
                            </div>

                            <div class="contact-item d-flex align-items-center mb-3 p-3 bg-light rounded-3">
                                <div class="icon-wrapper me-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-envelope-fill text-primary" viewBox="0 0 16 16">
                                        <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555ZM0 4.697v7.104a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V4.697l-8 4.646-8-4.646Z"/>
                                    </svg>
                                </div>
                                <div>
                                    <strong class="d-block text-dark">Email</strong>
                                    <a href="mailto:danhellem@outlook.com" class="text-muted text-decoration-none">danhellem@outlook.com</a>
                                </div>
                            </div>

                            <div class="contact-item d-flex align-items-center mb-3 p-3 bg-light rounded-3">
                                <div class="icon-wrapper me-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-telephone-fill text-primary" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z"/>
                                    </svg>
                                </div>
                                <div>
                                    <strong class="d-block text-dark">Phone</strong>
                                    <a href="tel:231-590-4451" class="text-muted text-decoration-none">231-590-4451</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>